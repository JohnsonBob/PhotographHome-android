<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_white_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/normal_text_color"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="相机："
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/camera_state_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="未连接"
                android:textColor="@color/dangerous_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="网速："
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/network_speed_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0kb/s"
                android:textColor="@color/dangerous_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/battery_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical|center_horizontal|center"
                android:text="电量：正在获取..."
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <include
            android:id="@+id/album_flashupload_topbar"
            layout="@layout/album_flashupload_topbar_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/split_line_color" />

        <LinearLayout
            android:id="@+id/album_flashupload_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/album_flashupload_choose_storage_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="卡1"
                    android:textColor="@color/normal_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/album_flashupload_choose_storage_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical|center_horizontal|center"
                    android:paddingRight="14dp"
                    android:text=""
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />
            </FrameLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/split_line_color" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/album_flashupload_choose_photo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/album_flashupload_choose_photo_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical|center_horizontal|center"
                        android:text="全部"
                        android:textColor="@color/normal_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/album_flashupload_choose_photo_num_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical|center_horizontal|center"
                        android:text="(0)"
                        android:textColor="@color/theme_color_normal"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/album_flashupload_choose_photo_icon"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical|center_horizontal|center"
                    android:paddingRight="14dp"
                    android:text=""
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />
            </FrameLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/split_line_color" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/album_flashupload_choose_upload_setting_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设置(B/Z)"
                    android:textColor="@color/normal_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/album_flashupload_choose_upload_setting_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical|center_horizontal|center"
                    android:paddingRight="14dp"
                    android:text=""
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/split_line_color" />

        <LinearLayout
            android:id="@+id/tip_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@color/background_white_color"
                android:gravity="center"
                android:text="如更换存储卡，请更换完后重启相机"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tip_layout_close"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/background_white_color"
                android:gravity="right"
                android:text="知道了"
                android:textColor="@color/theme_color_normal"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/album_flashupload_photo_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_white_color"
                android:visibility="visible" />

            <View
                android:id="@+id/list_shade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/add_back"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/flash_upload_list_tip_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_white_color"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="50dp"
                    android:src="@mipmap/flash_upload_list_empty" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="未读取到照片"
                    android:textColor="@color/second_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="top"
                    android:text="@string/flash_upload_list_text2"
                    android:textColor="@color/second_text_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/lookbigphoto_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/progressbg"
            android:indeterminateOnly="true" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/first_flashupload_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/add_back2"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/first_flashupload" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/first_use_flashupload_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/add_back2"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/first_use_flashupload" />
    </FrameLayout>
</FrameLayout>
