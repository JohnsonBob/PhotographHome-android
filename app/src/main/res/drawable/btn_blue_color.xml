<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/theme_color_tap"/>
            <corners android:radius="2dp"/>
            <solid android:color="@color/theme_color_tap"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/theme_color_normal"/>
            <corners android:radius="2dp"/>
            <solid android:color="@color/theme_color_normal"/>
        </shape>
    </item>
</selector>
